{
  "name": "@cardihab/auth0-capacitor-plugin",
  "version": "0.0.1",
  "description": "Use native auth0 lock with capacitor",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CardihabAuth0CapacitorPlugin.podspec"
  ],
  "author": "gdjennings",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gdjennings/auth0-capacitor.git.git"
  },
  "bugs": {
    "url": "https://github.com/gdjennings/auth0-capacitor.git/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- autocorrect --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api Auth0CapacitorPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -m inline -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^3.2.4",
    "@capacitor/core": "^3.2.4",
    "@capacitor/docgen": "^0.0.17",
    "@capacitor/ios": "^3.2.4",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^2.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^8.0.0",
    "prettier": "~2.4.1",
    "prettier-plugin-java": "~1.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "swiftlint": "^1.0.1",
    "typescript": "4.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.2.4"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.18.0",
    "@capacitor/cli": "^3.2.4"
  }
}
